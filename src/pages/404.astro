---
import BaseLayout from '~/layouts/BaseLayout.astro';
import { buttonVariants } from '~/components/ui/button';
import { cn } from '~/lib/utils';
import { FileQuestion, ArrowRight } from 'lucide-react';

const seo = {
  title: 'Page Not Found - GREENTECH',
  description: 'The page you are looking for could not be found. Return to GREENTECH homepage for sustainable plastic solutions.',
  noindex: true, // Don't index error pages
};
---

<BaseLayout seo={seo}>
  <div class="min-h-[calc(100vh-theme(spacing.18)-theme(spacing.16))] flex items-center justify-center px-4 py-16">
    <div class="max-w-md mx-auto text-center">
      <!-- Error illustration -->
      <div class="mb-8">
        <div class="w-24 h-24 mx-auto mb-6 bg-primary/10 rounded-full flex items-center justify-center">
          <FileQuestion className="w-12 h-12 text-primary" client:load />
        </div>
        <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-foreground mb-4">Page Not Found</h2>
        <p class="text-muted-foreground mb-8">
          Sorry, we couldn't find the page you're looking for. It might have been moved, deleted, or the URL might be incorrect.
        </p>
      </div>

      <!-- Navigation options -->
      <div class="space-y-4 mb-8">
        <a href="/" class={cn(buttonVariants({ variant: "default", size: "lg" }), "w-full")}>
          Return Home
        </a>
        <a href="/contact" class={cn(buttonVariants({ variant: "outline", size: "lg" }), "w-full")}>
          Contact Us
        </a>
      </div>

      <!-- Quick links -->
      <div class="border-t pt-6">
        <p class="text-sm font-medium text-foreground mb-4">Or explore these sections:</p>
        <div class="grid grid-cols-1 gap-2">
          <a
            href="/company"
            class="text-primary hover:text-primary/80 text-sm transition-colors flex items-center justify-center gap-2"
          >
            About GREENTECH
            <ArrowRight className="w-3 h-3" client:load />
          </a>
          <a
            href="/solutions"
            class="text-primary hover:text-primary/80 text-sm transition-colors flex items-center justify-center gap-2"
          >
            Sustainable Solutions
            <ArrowRight className="w-3 h-3" client:load />
          </a>
          <a
            href="/brands"
            class="text-primary hover:text-primary/80 text-sm transition-colors flex items-center justify-center gap-2"
          >
            Our Brands
            <ArrowRight className="w-3 h-3" client:load />
          </a>
          <a
            href="/industries"
            class="text-primary hover:text-primary/80 text-sm transition-colors flex items-center justify-center gap-2"
          >
            Industries We Serve
            <ArrowRight className="w-3 h-3" client:load />
          </a>
          <a
            href="/articles"
            class="text-primary hover:text-primary/80 text-sm transition-colors flex items-center justify-center gap-2"
          >
            Latest Articles
            <ArrowRight className="w-3 h-3" client:load />
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>