---
import { storyblokEditable } from '@storyblok/astro';
import { Markdown } from 'astro-remote';

import Icon from '~/components/Icon.astro';

const { blok } = Astro.props;
---

<Markdown
  {...storyblokEditable(blok)}
  content={blok.text}
  sanitize={{ allowComponents: true }}
  components={{ Icon }}
/>
