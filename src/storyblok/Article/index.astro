---
import { storyblokEditable } from '@storyblok/astro';
import OptimisedImage from '~/components/OptimisedImage.astro';
import Text from '../Text.astro';
import Badge from '../Badge.astro';
import Icon from '~/components/Icon.astro';
import { formatDisplayDate, formatISODate } from '~/utils/date';
// import ArticleAside from './ArticleAside.astro';

const { blok } = Astro.props;
const { title, excerpt, body, articleTags, image, dateModified } = blok;

const tags = articleTags ? articleTags.split(',') : [];
const formattedDate = dateModified ? formatDisplayDate(dateModified) : '';
const isoDate = dateModified ? formatISODate(dateModified) : '';
---

<article {...storyblokEditable(blok)}>
  <!-- Hero Section -->
  <section class="relative py-12 lg:py-16 bg-line-connects-light border-b-3 border-primary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
      <!-- Back to Articles Link - Absolute positioned -->
      <a
        href="/articles"
        class="absolute top-[-45px] inline-flex items-center text-primary hover:text-primary-dark font-medium gap-2 transition-colors duration-200 z-10"
      >
        <Icon name="arrow-left" />
        Back to Articles
      </a>
      <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
        <!-- Left Column: Content -->
        <div class="lg:w-1/2 lg:pr-8">
          {
            title && (
              <h1 class="text-2xl lg:text-4xl font-bold mb-6 text-gray-900 dark:text-white leading-tight">
                {title}
              </h1>
            )
          }

          {
            excerpt && (
              <div class="text-lg sm:text-xl text-gray-700 dark:text-gray-200 leading-relaxed mb-4">
                <Text blok={{ text: excerpt }} />
              </div>
            )
          }

          {
            formattedDate && (
              <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
                <Icon name="calendar" />
                <time datetime={isoDate}>{formattedDate}</time>
              </div>
            )
          }
        </div>

        <!-- Right Column: Image -->
        {
          image.filename && (
            <div class="lg:w-1/2 w-full">
              <div class="relative overflow-hidden rounded-xl">
                <OptimisedImage
                  src={image.filename}
                  alt={image.alt || title}
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          )
        }
      </div>
    </div>
  </section>

  <!-- Main Content Section -->
  <div class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 relative">
        <!-- Article Body - Centered -->
        <main class="flex-1 order-2 lg:order-1">
          {
            body && (
              <Text
                blok={{
                  text: body,
                  textClasses: 'prose-lg prose-gray dark:prose-invert mx-auto article-body',
                }}
              />
            )
          }

          <!-- Article Tags -->
          {
            articleTags && (
              <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
                <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-4">
                  Tags
                </h3>
                <div class="flex flex-wrap gap-2">
                  {tags.map(tag => (
                    <Badge blok={{ text: `#${tag}`, variant: 'outline' }} />
                  ))}
                </div>
              </div>
            )
          }
        </main>

        <!-- Article Aside Component - Commented out but maintains layout space -->
        <div class="order-1 lg:order-2 hidden lg:block w-64 flex-shrink-0">
          <!-- <ArticleAside /> -->
        </div>
      </div>
    </div>
  </div>
</article>
