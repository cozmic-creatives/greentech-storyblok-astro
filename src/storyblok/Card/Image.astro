---
import { storyblokEditable } from '@storyblok/astro';
import Text from '~/storyblok/Text.astro';
import Icon from '~/components/Icon.astro';
const { blok } = Astro.props;
const { link, images, text, icon } = blok;
---

<a
  href={link}
  {...storyblokEditable(blok)}
  class="border rounded-xl shadow-lg hover:border-primary/70 hover:bg-primary/10 hover:shadow-xl hover:scale-[1.02] transition-all duration-300 flex flex-col overflow-hidden relative group"
>
  <div class="flex flex-col items-center">
    <div class="relative">
      <img
        src={images[0]?.filename}
        alt={images[0]?.alt || 'Icon'}
        class="w-full h-full object-cover aspect-video border-b-2 border-primary"
      />
      <div
        class="absolute inset-0 bg-gradient-to-tr from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-start"
      >
        <div
          class="text-white font-medium flex items-center gap-1 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300 p-4 leading-none"
        >
          Learn More
          <Icon name="arrow-right" />
        </div>
      </div>
    </div>
    <Text blok={{ text, textClasses: 'p-5 flex flex-col gap-2 prose-sm' }} />
  </div>
</a>
